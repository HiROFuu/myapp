<% provide(:title, "Log in") %>

<h1 class="h3 mb-3 font-weight-normal">ログインする</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    
    <div class="card-header">
    <p class="login-title">SNSアカウントでログイン</p>
      <%= link_to "/auth/twitter" do %>
        <span class="fab fa-twitter-square"></span>
      <% end %>
      <%= link_to "/auth/facebook" do %>
        <span class="fab fa-facebook-square"></span>
      <% end %>
      <%= link_to "/auth/google_oauth2" do %>
        <span class="fab fa-google-plus-square"></span>
      <% end %>
      <%= link_to "/auth/google_oauth2" do %>
        <span class="fab fa-line"></span>
      <% end %>
    </div>
    

    <%= form_for(:session, url: login_path) do |f| %>
      <p class="login-title">または</p>
      <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>
      <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
      <%= link_to "パスワードをお忘れですか？", new_password_reset_path %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン情報を保存する</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>

    <p><%= link_to "ユーザー登録が未だの方はコチラ", signup_path %></p>


  </div>
</div>