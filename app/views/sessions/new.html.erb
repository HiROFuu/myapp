<% provide(:title, "Log in") %>
<h1>ログイン画面</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "パスワードをお忘れですか？", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン情報を保存する</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p><%= link_to "ユーザー登録が未だの方はコチラ", signup_path %></p>
    <%= link_to "Twitterアカウントでログイン", "/auth/twitter" %><br>
    <%= link_to "Facebookアカウントでログイン", "/auth/facebook" %><br>
    <%= link_to "Googleアカウントでログイン", "/auth/google_oauth2" %>
  </div>
</div>