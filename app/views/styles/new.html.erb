<div class="style-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">流派ロゴ登録</h1>
        <%= form_for @style do |f| %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
        　<div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%>
          </div>

          <%= f.submit '登録', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>