<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>

  <div class="field">
    <%= form.label :event_data %>
    <%= form.datetime_select :event_data, id: :event_event_data %>
  </div>

  <div class="field">
    <%= form.label :event_place %>
    <%= form.text_field :event_place, id: :event_event_place %>
  </div>

  <div class="field">
    <%= form.label :event_style %>
    <%= form.text_field :event_style, id: :event_event_style %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :event_body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
