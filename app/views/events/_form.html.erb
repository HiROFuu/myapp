<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>

  <div class="field">
    <%= form.label :eventdate %>
    <%= form.datetime_select :eventdate, id: :event_eventdate %>
  </div>

  <div class="field">
    <%= form.label :eventplace %>
    <%= form.text_field :eventplace, id: :event_eventplace %>
  </div>

  <div class="field">
    <%= form.label :eventstyle %>
    <%= form.text_field :eventstyle, id: :event_eventstyle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :event_body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
