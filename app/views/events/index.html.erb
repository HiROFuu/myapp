<p id="notice"><%= notice %></p>

<h1>展覧会を探す</h1>

<div class="search-form">
  <%= form_with(scope: :search, url: events_path, method: :get, local: true) do |f| %>
    <div class="field">
      <%= f.label(:name) %>
      <%= f.text_field :name, value: @search_params[:name] %>
    </div>
    
    <div class="field">
      <%= f.label "開催日" %>
      <%= f.date_field :from_date, value: @search_params[:from_date] %>
    </div>
    
    <!--<div class="field">-->
    <!--  <%= f.label(:prefecture) %>-->
    <!--  <%= f.text_field :prefecture, value: @search_params[:prefecture] %>-->
    <!--</div>-->
    
    <div class="field">
      <%= f.label(:prefecture) %>
      <%= f.select :prefecture, [["---選択してください---",""],["大阪府","大阪府"],["東京都","東京都"]] %>
    </div>
  
    <div class="field">
      <%= f.label(:style) %>
      <%= f.text_field :style, value: @search_params[:style] %>
    </div>
    
    <div class="actions">
      <%= f.submit('検索') %>
    </div>
  <% end %>
</div>

<div class="search_result">
  検索結果は<%= @events_counts %>件です。
</div>

<table>
  <thead>
    <tr>
      <th>展覧会名</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>開始時間</th>
      <th>終了時間</th>
      <th>開催場所</th>
      <th>流派</th>
      <th>参加費</th>
      <th>出瓶数</th>
      <th>URL</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.from_date %></td>
        <td><%= event.to_date %></td>
        <td><%= event.from_time.strftime('%H:%M') %></td>
        <td><%= event.to_time.strftime('%H:%M') %></td>
        <td><%= event.prefecture %></td>
        <td><%= style_logo(event.style) %></td>
        <td><%= event.price %></td>
        <td><%= event.count_works %></td>
        <td><%= event.link_url %></td>
        <td><%= event.discription %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= link_to 'New Event', new_event_path %>
<%= paginate @events %>