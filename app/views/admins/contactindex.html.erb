<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Category</th>
      <th>Content</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.category %></td>
        <td><%= contact.content %></td>
        <td><%= contact.status %></td>
        <td><%= link_to 'Edit', admins_contactedit_path(id: contact.id) %></td>
        <td><%= link_to 'Destroy', admins_contactdelete_path(id: contact.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

