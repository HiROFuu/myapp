<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :contact_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :contact_email %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category,[["---選択してください---",""],["お問い合わせ","お問い合わせ"],["掲載希望","掲載希望"],["機能改善要望","機能改善要望"]] %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :contact_content, class: "form-control" %>
  </div>
  
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, [["未対応","未対応"],["対応中","対応中"]] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
